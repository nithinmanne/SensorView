<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naganithin.sensorview.GraphActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/g1"
            android:layout_width="200dip"
            android:layout_height="100dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/g2"
            android:layout_width="200dip"
            android:layout_height="100dip"
            android:layout_below="@+id/g1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/g3"
            android:layout_width="200dip"
            android:layout_height="100dip"
            android:layout_below="@+id/g2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/g4"
            android:layout_width="200dip"
            android:layout_height="100dip"
            android:layout_below="@+id/g3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp"
            android:layout_marginStart="13dp"
            android:onClick="back"
            android:text="@string/back_graph" />

        <TextView
            android:id="@+id/lv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/textview"
            android:layout_alignBottom="@+id/g1"
            android:layout_alignEnd="@+id/button2"
            android:layout_marginEnd="23dp" />

        <TextView
            android:id="@+id/lv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lv1"
            android:layout_alignTop="@+id/g2"
            android:layout_marginTop="39dp"
            android:text="@string/textview" />

        <TextView
            android:id="@+id/lv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lv2"
            android:layout_alignTop="@+id/g3"
            android:layout_marginTop="34dp"
            android:text="@string/textview" />

        <TextView
            android:id="@+id/lv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lv3"
            android:layout_alignTop="@+id/g4"
            android:layout_marginTop="27dp"
            android:text="@string/textview" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
